package Day03;

// for문을 이용해서 실행 결과와 같은 삼각형을 출력하는 코드를 작성해보세요
public class Exercise06 {

	public static void main(String[] args) {
		int i = 0;
		int j = 0;
		String star = "*";
		
		for(i = 1; i <= 5; i++) {
			for(j = 1; j <= i; j++) {
				System.out.println("");
			}
			System.out.println(star);
		}
	}

}
